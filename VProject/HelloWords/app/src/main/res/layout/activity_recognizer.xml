<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecognizerActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/voice_volume_hint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:text="Voice Volume"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/voice_power_bar"
        style="@style/VoiceVolumeStyle"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:max="100"
        android:progress="0" />

    <TextView
        android:layout_weight="4"
        android:id="@+id/result_hint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Result"
        android:textStyle="bold" />

    <TextView
        android:layout_weight="4"
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_weight="4"
        android:id="@+id/current_state_hint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Current State" />

    <TextView
        android:layout_weight="4"
        android:id="@+id/current_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/btn_holder"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="Cancel"
            android:visibility="invisible" />

        <Button
            android:id="@+id/cancel_btn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="Cancel" />

        <Button
            android:id="@+id/start_btn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="Start" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="Cancel"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3.8"
        android:textAlignment="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5" />

        <TextView
            android:id="@+id/vocalize"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_green_light"
            android:text="Listen to the correct pronunciation"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4" />
</LinearLayout>
